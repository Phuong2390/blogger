<div class="container">
    <div class="row">
        <div class="">
            <div class="card">
                <h2><%= @post.title %>
                <% if user_signed_in? %>
                    <%= link_to "Edit Post", edit_post_path(@post) %>
                    <%= link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
                <h2>
                <p>Tag: <%= @post.all_tags %></p>
                <h5>(<%= time_ago_in_words(@post.created_at)%>)</h5>
                <div class="fakeimg" ><%= image_tag @post.image_url.to_s %></div>
                <p><%= @post.content %></p>
                <p>
                    <div class="page-header">
                        <h1><small class="pull-right"><%= @post.comments.count %> comments</small> Comments </h1>
                    </div>
                    <%= render @post.comments %>
                    <div class="page-header"> 
                    </div>
                    <div>
                        <h1>Add a comment </h1>
                        <%= render 'comments/form' %><br> 
                    </div>  
                </p>
            </div>  
        <div>
    </div>
</div>
    
