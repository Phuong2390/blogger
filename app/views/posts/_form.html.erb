<%= form_for @post do |f| %>
<div class="container">
<div class="card">
      <div class="row">
            <form role="form" id="contact-form" class="contact-form">
                  <div class="row">
                        <div class="col-md-11">
                              <div class="form-group">
                                    <%= f.label :title %><br />
						            <%= f.text_field :title, autocomplete: "title", class: "form-control" %>                                    
                              </div>
                        </div>
                  </div>
                  <div class="row">
                        <div class="col-md-11">
                              <div class="form-group">
                                    <%= f.label :image %><br />
						            <%= f.file_field :image, class: "form-control" %>                                   
                              </div>
                        </div>
                  </div>
                  <div class="row">
                        <div class="col-md-11">
                              <div class="form-group">
                                    <%= f.label :summary %><br />
                                    <%= f.text_area :summary, class: "form-control textarea" %>
                              </div>
                        </div>
                  </div>
                  <div class="row">
                        <div class="col-md-11">
                              <div class="form-group">
                                    <%= f.label :content %><br />
                                    <%= f.text_area :content, class: "form-control textarea"%>
                              </div>
                        </div>
                  </div>
                  <div class="row">
                        <div class="col-md-11">
                              <div class="form-group">
                                    <%= f.label :Tags %><br />
                                    <%= f.text_area :all_tags, class: "form-control textarea"%>
                              </div>
                        </div>
                  </div>
                  <div class="row">
                        <div class="col-md-11">
                              <div class="form-group">
                                    <h4> Bạn có muốn để bài đăng này ở chế độ công khai: </h4>
                                    <%= f.label :public %>
                                    <%= f.check_box :public %><br>                                   
                              </div>
                        </div>
                  </div>
                  <div class="row">
                        <div class="col-md-11">
                              <button type="submit" class="btn btn-success btn-lg btn-block">Post</button>
                        </div>
                  </div>
            </form>
      </div>
    </div>
</div>
<% end %>