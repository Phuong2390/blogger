<%= form_for @post do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <br>
    <%= f.label :summary %><br>
    <%= f.text_field :summary %><br>
    <br>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
    <br>
    <%= f.label :all_tags %><br>
    <%= f.text_area :all_tags %><br>
    <br>
    <%= f.label :public %><br>
    <%= f.check_box :public %><br>
    <br>
    <%= f.submit %><br>
<% end %>