<h1>My Blog</h1>
<p>Xin chao ban den voi blog cua toi</p>
 
<% @posts.each do |post| %>
    <h2><%= post.title %> </h2>
    <%= image_tag post.image_url.to_s %>
    <p><%= post.all_tags %></p>
    <div><%= truncate(post.content, :length =>25) %> </div>
    <%= link_to "Read Post", post %>
<% end %>

